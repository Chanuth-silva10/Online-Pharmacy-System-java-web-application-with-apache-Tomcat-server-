<?xml version="1.0" encoding="UTF-8"?>

  <web-app  xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
   
   
   <servlet>
         <servlet-name>SignUPServelet</servlet-name> 
         <servlet-class>com.servelet.SignUPServelet</servlet-class>    
   </servlet>
   <servlet-mapping>
           <servlet-name>SignUPServelet</servlet-name>
           <url-pattern>/insert</url-pattern>
   </servlet-mapping>
   
   <servlet>
         <servlet-name>loginServelet</servlet-name> 
         <servlet-class>com.servelet.loginServelet</servlet-class>    
   </servlet>
   <servlet-mapping>
           <servlet-name>loginServelet</servlet-name>
           <url-pattern>/login</url-pattern>
   </servlet-mapping>
   
   <servlet>
         <servlet-name>AddNewProductServelet</servlet-name> 
         <servlet-class>com.servelet.AddNewProductServelet</servlet-class>    
   </servlet>
   <servlet-mapping>
           <servlet-name>AddNewProductServelet</servlet-name>
           <url-pattern>/addproduct</url-pattern>
   </servlet-mapping>
   
   <servlet>
         <servlet-name>UpdateProductServelet</servlet-name> 
         <servlet-class>com.servelet.UpdateProductServelet</servlet-class>    
   </servlet>
   <servlet-mapping>
           <servlet-name>UpdateProductServelet</servlet-name>
           <url-pattern>/updateproduct</url-pattern>
   </servlet-mapping>
   
   <servlet>
         <servlet-name>RemoveProductServelet</servlet-name> 
         <servlet-class>com.servelet.RemoveProductServelet</servlet-class>    
   </servlet>
   <servlet-mapping>
           <servlet-name>RemoveProductServelet</servlet-name>
           <url-pattern>/removeproduct</url-pattern>
   </servlet-mapping>
</web-app>